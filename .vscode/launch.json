{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Launch Firefox against localhost",
            "url": "http://localhost:4200/",
            "webRoot": "${workspaceRoot}",
            "log": {
                "consoleLevel": {
                    "PathConversion": "Debug",
                    "default": "Debug"
                }
            }
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:4200/",
            "webRoot": "${workspaceRoot}"
        }
    ]
}